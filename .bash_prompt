#
# ~/.bash_prompt
#

# Declare common shell colours and properties
RED=$(tput setaf 1)
ORANGE=$(tput setaf 3)
MAGENTA=$(tput setaf 5)
CYAN=$(tput setaf 6)
BLUE=$(tput setaf 4)
GREEN=$(tput setaf 2)
WHITE=$(tput setaf 7)
BOLD=$(tput bold)
RESET=$(tput sgr0)

export PS1="\[$BOLD\]\[$RED\]\h\[$RESET\]\[$WHITE\] [\[$BOLD\]\[$GREEN\]\w\[$RESET\]\[$WHITE\]]\[$CYAN\]\\$ \[$RESET\]"
